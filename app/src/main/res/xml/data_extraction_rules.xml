<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="openmonetis_secure_prefs.xml" />
        <exclude domain="database" path="openmonetis_companion.db" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow transfer during device migration -->
        <include domain="sharedpref" path="." />
        <exclude domain="sharedpref" path="openmonetis_secure_prefs.xml" />
    </device-transfer>
</data-extraction-rules>
